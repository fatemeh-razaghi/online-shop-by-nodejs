<div
  class="d-flex justify-content-between align-items-center mb-3 border-bottom-1"
  style="direction: rtl"
>
  <h2>محصولات</h2>
  <div class="btn-group" style="direction: ltr">
    <a href="/admin/products/create" class="btn btn-sm btn-primary"
      >ایجاد محصول جدید</a
    >
    <!-- <a href="/admin/photos" class="btn btn-sm btn-danger">بخش عکس ها</a> -->
  </div>
</div>
<div class="table-responsive">
  <table
    class="table table-striped table-bordered text-center "
    style="direction: rtl"
  >
    <thead>
      <tr>
        <th>عنوان محصول</th>
        <th>مقدار بازدید</th>
        <th>تنظیمات</th>
      </tr>
    </thead>
    <tbody>
      <% products.docs.forEach(product=>{ %>
      <tr>
        <td><a href="/products/رخساره-شاپ" class="text-decoration-none text-black"><%= product.title %></a></td>
        <td><%= product.viewCount %></td>
        <td>
          <form
            action="/admin/products/<%= product._id %>?_method=DELETE"
            method="post"
            style="direction: ltr"
          >
            <div class="btn-group btn-group-sm">
              <a
                href="/admin/products/<%= product._id %>/edit"
                class="btn btn-primary"
                >ویرایش</a
              >
              <button type="submit" class="btn btn-danger">حذف</button>
            </div>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
<%-include(viewPath('layouts/pagination') ,{pagination:products})%>
</div>
